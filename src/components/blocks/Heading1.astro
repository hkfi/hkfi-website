---
import { buildHeadingId } from '@/libs/helpers/blog'
import RichText from './text/RichText.astro'
import type { Heading1BlockObjectResponse } from '@notionhq/client/build/src/api-endpoints'

export type Props = {
  block: Heading1BlockObjectResponse
}

const { block } = Astro.props

const id = buildHeadingId(block)
---

{
  (
    <div class='group relative text-text'>
      <h1 class='text-3xl font-bold'>
        {block.heading_1.rich_text.map((richText) => (
          <RichText richText={richText} />
        ))}
      </h1>
      <a
        href={`#${id}`}
        id={id}
        class='absolute right-0 top-2.5 inline-flex h-5 w-5 opacity-0 hover:text-primary group-hover:opacity-100 lg:-left-5'
      >
        <svg
          width='16'
          height='16'
          version='1.1'
          viewBox='0 0 16 16'
          xmlns='http://www.w3.org/2000/svg'
        >
          <path
            fill-rule='evenodd'
            fill='currentcolor'
            d='M4 9h1v1H4c-1.5 0-3-1.69-3-3.5S2.55 3 4 3h4c1.45 0 3 1.69 3 3.5 0 1.41-.91 2.72-2 3.25V8.59c.58-.45 1-1.27 1-2.09C10 5.22 8.98 4 8 4H4c-.98 0-2 1.22-2 2.5S3 9 4 9zm9-3h-1v1h1c1 0 2 1.22 2 2.5S13.98 12 13 12H9c-.98 0-2-1.22-2-2.5 0-.83.42-1.64 1-2.09V6.25c-1.09.53-2 1.84-2 3.25C6 11.31 7.55 13 9 13h4c1.45 0 3-1.69 3-3.5S14.5 6 13 6z'
          />
        </svg>
      </a>
    </div>
  )
}
