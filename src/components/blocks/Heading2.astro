---
import { buildHeadingId } from '@/libs/helpers/blog'
import RichText from './text/RichText.astro'
import type { Heading2BlockObjectResponse } from '@notionhq/client/build/src/api-endpoints'

export type Props = {
  block: Heading2BlockObjectResponse
}

const { block } = Astro.props

const id = buildHeadingId(block)
---

{
  (
    <a href={`#${id}`} id={id} class='hover:text-primary'>
      <h2 class='text-2xl font-bold'>
        {block.heading_2.rich_text.map((richText) => (
          <RichText richText={richText} />
        ))}
      </h2>
    </a>
  )
}
