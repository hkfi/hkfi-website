    "baseUrl": ".",
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/libs/*": ["src/libs/*"],
      "@/constants/*": ["src/constants/*"],
      "@/layouts/*": ["src/layouts/*"]
    }
  },
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"]
}
